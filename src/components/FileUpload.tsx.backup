'use client';

import { useCallback, useState, useEffect } from 'react';
import { useDropzone } from 'react-dropzone';
import { Upload, Check, AlertCircle, X, Shield } from 'lucide-react';
import { motion, AnimatePresence } from 'framer-motion';
import { useLanguage } from '@/contexts/LanguageContext';
import { ContractData, ProcessContractResponse } from '@/types/contract';
import ProcessingState from './ProcessingState';
import { SectorId, getSectorTemplate, getSectorDefaults, SECTOR_TEMPLATES, DEFAULT_SECTOR } from '@/constants/sectorTemplates';

interface FileUploadProps {
    onUploadSuccess: (contract: ContractData) => void;
    customQuery?: string;
}

export default function FileUpload({ onUploadSuccess, customQuery }: FileUploadProps) {
    const { t, language } = useLanguage();
    const [isUploading, setIsUploading] = useState(false);
    const [showConfig, setShowConfig] = useState(false);
    const [selectedSector, setSelectedSector] = useState<SectorId>(DEFAULT_SECTOR);
    const [availablePoints, setAvailablePoints] = useState<string[]>([]);
    const [selectedPoints, setSelectedPoints] = useState<string[]>([]);
    const [uploadStatus, setUploadStatus] = useState<{
        type: 'success' | 'error' | null;
        message: string;
    }>({ type: null, message: '' });

    // Update available points when sector changes
    useEffect(() => {
        const template = getSectorTemplate(selectedSector);
        setAvailablePoints(template.dataPoints);
        // Auto-select only Top 10 critical points (Smart Default)
        setSelectedPoints(template.defaultPoints);
    }, [selectedSector]);

    const toggleDataPoint = (point: string) => {
        setSelectedPoints(prev =>
            prev.includes(point)
                ? prev.filter(p => p !== point)
                : [...prev, point]
        );
    };

    const handleSectorChange = (sectorId: SectorId) => {
        setSelectedSector(sectorId);
    };

    const onDrop = useCallback(async (acceptedFiles: File[]) => {
        if (acceptedFiles.length === 0) return;

        const file = acceptedFiles[0];
        setIsUploading(true);
        setUploadStatus({ type: null, message: '' });

        try {
            // Step 1: Upload file to Supabase Storage
            setUploadStatus({ type: null, message: 'Subiendo archivo a la nube...' });

            const { uploadContractFile } = await import('@/lib/supabase');
            const { path: filePath, error: uploadError } = await uploadContractFile(file);

            if (uploadError || !filePath) {
                throw new Error(`Error al subir archivo: ${uploadError?.message || 'Unknown error'} `);
            }

            // Step 2: Process contract with AI
            setUploadStatus({ type: null, message: 'Analizando contrato con IA...' });

            const formData = new FormData();
            formData.append('file', file);
            formData.append('dataPoints', JSON.stringify(selectedPoints));
            formData.append('sector', selectedSector);

            if (customQuery?.trim()) {
                formData.append('customQuery', customQuery.trim());
            }

            const response = await fetch('/api/process-contract', {
                method: 'POST',
                body: formData,
            });

            const result: ProcessContractResponse = await response.json();

            if (!result.success || !result.data) {
                throw new Error(result.error || 'Error al procesar contrato');
            }

            // Step 3: Save to database
            setUploadStatus({ type: null, message: 'Guardando en base de datos...' });

            const saveResponse = await fetch('/api/save-contract', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    id: result.data.id,
                    fileName: file.name,
                    filePath: filePath,
                    contractData: result.data,
                    sector: selectedSector,
                    tags: [],
                    requestedDataPoints: selectedPoints,
                }),
            });

            const saveResult = await saveResponse.json();

            if (!saveResult.success) {
                console.error('Failed to save to database:', saveResult.error);
                // Continue anyway - file is uploaded and processed
            }

            setUploadStatus({
                type: 'success',
                message: `✓ ${t('uploadSuccess')} `,
            });
            onUploadSuccess(result.data);

        } catch (error) {
            setUploadStatus({
                type: 'error',
                message: error instanceof Error ? error.message : t('uploadError'),
            });
            console.error('Upload error:', error);
        } finally {
            setIsUploading(false);
        }
    }, [onUploadSuccess, t, customQuery, selectedPoints, selectedSector]);

    const { getRootProps, getInputProps, isDragActive, isDragReject } = useDropzone({
        onDrop,
        accept: {
            'application/pdf': ['.pdf'],
            'application/vnd.openxmlformats-officedocument.wordprocessingml.document': ['.docx'],
            'application/msword': ['.doc'],
        },
        maxFiles: 1,
        maxSize: 10 * 1024 * 1024,
        disabled: isUploading,
    });

    const dropzoneClass = `
    relative overflow-hidden rounded-2xl border-2 border-dashed p-8 text-center
    transition-all duration-300 ease-out cursor-pointer backdrop-blur-xl
    ${isDragActive && !isDragReject
            ? 'border-emerald-400 bg-emerald-500/10 scale-[1.02]'
            : isDragReject
                ? 'border-red-400 bg-red-500/10'
                : 'border-white/10 bg-white/5 hover:border-white/20 hover:bg-white/10'
        }
    ${isUploading ? 'pointer-events-none opacity-70' : ''}
`;

    return (
        <div className="w-full space-y-4">
            {/* Dropzone or Processing State */}
            {isUploading ? (
                <div className="border-2 border-dashed border-slate-700 rounded-2xl bg-slate-800/30 backdrop-blur-smoverflow-hidden">
                    <ProcessingState />
                </div>
            ) : (
                <div {...getRootProps()} className={dropzoneClass}>
                    <div className="absolute inset-0 bg-gradient-to-br from-emerald-500/5 via-transparent to-blue-500/5 pointer-events-none" />
                    <input {...getInputProps()} />

                    <div className="relative z-10">
                        <div className={`mx-auto mb-4 w-16 h-16 rounded-full flex items-center justify-center transition-all duration-300 ${isDragActive ? 'bg-emerald-500/20 scale-110' : 'bg-white/5'}`}>
                            <svg className={`w-8 h-8 transition-colors flex-shrink-0 ${isDragActive ? 'text-emerald-400' : 'text-slate-400'}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={1.5} d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                            </svg>
                        </div>

                        <div className="space-y-2">
                            {isDragActive ? (
                                <p className="text-lgfont-medium text-emerald-400">{t('dropHere')}</p>
                            ) : (
                                <>
                                    <p className="text-lgfont-medium text-slate-200">{t('dropzoneText')}</p>
                                    <p className="text-smtext-slate-400">
                                        {t('dropzoneOr')} <span className="text-emerald-400 hover:text-emerald-300">{t('browseFiles')}</span>
                                    </p>
                                </>
                            )}

                            {!isUploading && (
                                <div className="mt-4 flex items-center justify-center gap-3 text-xs text-slate-500">
                                    <span>PDF</span>
                                    <span className="text-slate-600">•</span>
                                    <span>DOCX</span>
                                    <span className="text-slate-600">•</span>
                                    <span>Max 10MB</span>
                                </div>
                            )}
                        </div>
                    </div>

                    {/* Data Point Configuration */}
                    <div className="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl overflow-hidden">
                        <button
                            onClick={() => setShowConfig(!showConfig)}
                            className="w-full flex items-center justify-between px-4 py-3 hover:bg-white/5 transition-colors"
                        >
                            <div className="flex items-center gap-2">
                                <Settings className="w-4 h-4 text-slate-400" />
                                <span className="text-smfont-medium text-slate-300">
                                    {language === 'es' ? '⚙️ Configurar Extracción por Sector' : '⚙️ Configure Sector Extraction'}
                                </span>
                                <span className="px-2 py-0.5 text-xs rounded-full bg-emerald-500/20 text-emerald-400">
                                    {selectedPoints.length}/30
                                </span>
                            </div>
                            <motion.div animate={{ rotate: showConfig ? 180 : 0 }} transition={{ duration: 0.2 }}>
                                <ChevronDown className="w-4 h-4 text-slate-400" />
                            </motion.div>
                        </button>

                        <AnimatePresence>
                            {showConfig && (
                                <motion.div
                                    initial={{ height: 0, opacity: 0 }}
                                    animate={{ height: 'auto', opacity: 1 }}
                                    exit={{ height: 0, opacity: 0 }}
                                    transition={{ duration: 0.2 }}
                                    className="overflow-hidden"
                                >
                                    <div className="p-4 pt-0 border-t border-white/10">
                                        {/* Sector Selector */}
                                        <div className="mb-4 mt-3">
                                            <label className="flex items-center gap-2 text-xs font-medium text-slate-400 mb-2">
                                                <Building2 className="w-4 h-4" />
                                                {language === 'es' ? 'Selecciona tu Sector / Industria:' : 'Select Your Sector / Industry:'}
                                            </label>
                                            <div className="grid grid-cols-2 md:grid-cols-4 gap-2">
                                                {SECTOR_TEMPLATES.map((template) => (
                                                    <button
                                                        key={template.id}
                                                        onClick={() => handleSectorChange(template.id)}
                                                        className={`px-3 py-2 rounded-lgtext-smfont-medium transition-all ${selectedSector === template.id
                                                            ? 'bg-purple-500/20 text-purple-300 border border-purple-500/30'
                                                            : 'bg-white/5 text-slate-400 border border-white/10 hover:bg-white/10'
                                                            } `}
                                                    >
                                                        {language === 'es' ? template.nameEs : template.nameEn}
                                                    </button>
                                                ))}
                                            </div>
                                            <p className="text-xs text-slate-500 mt-2 italic">
                                                {getSectorTemplate(selectedSector).description}
                                            </p>
                                        </div>

                                        {/* Data Points Grid */}
                                        <div>
                                            <div className="flex items-center justify-between mb-2">
                                                <p className="text-xs text-slate-400">
                                                    {language === 'es'
                                                        ? `Puntos de datos específicos de ${getSectorTemplate(selectedSector).nameEs}: `
                                                        : `${getSectorTemplate(selectedSector).nameEn} -specific data points: `}
                                                </p>
                                                <span className="text-xs text-emerald-400 bg-emerald-500/10 px-2 py-1 rounded">
                                                    {language === 'es' ? '✨ Top 5 Deal Killers' : '✨ Top 5 Deal Killers'}
                                                </span>
                                            </div>
                                            <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2">
                                                {availablePoints.map((point) => (
                                                    <button
                                                        key={point}
                                                        onClick={() => toggleDataPoint(point)}
                                                        className={`flex items-center gap-2 px-3 py-2 rounded-lgtext-xs font-medium transition-all ${selectedPoints.includes(point)
                                                            ? 'bg-emerald-500/20 text-emerald-400 border border-emerald-500/30'
                                                            : 'bg-white/5 text-slate-400 border border-white/10 hover:bg-white/10'
                                                            } `}
                                                    >
                                                        <div className={`w-4 h-4 rounded flex items-center justify-center flex-shrink - 0 ${selectedPoints.includes(point) ? 'bg-emerald-500' : 'bg-white/10'
                                                            } `}>
                                                            {selectedPoints.includes(point) && <Check className="w-3 h-3 text-white" />}
                                                        </div>
                                                        <span className="truncate">{point}</span>
                                                    </button>
                                                ))}
                                            </div>
                                        </div>
                                    </div>
                                </motion.div>
                            )}
                        </AnimatePresence>
                    </div>

                    {/* Custom Query Indicator */}
                    {customQuery && (
                        <motion.div
                            initial={{ opacity: 0, y: -10 }}
                            animate={{ opacity: 1, y: 0 }}
                            className="flex items-center gap-2 px-4 py-2 bg-purple-500/10 border border-purple-500/30 rounded-xl"
                        >
                            <span className="text-xs text-purple-400">
                                {language === 'es' ? 'Pregunta activa:' : 'Active question:'} &quot;{customQuery}&quot;
                            </span>
                        </motion.div>
                    )}

                    {/* Status Message */}
                    {uploadStatus.type && (
                        <motion.div
                            initial={{ opacity: 0, y: -10 }}
                            animate={{ opacity: 1, y: 0 }}
                            className={`p-4 rounded-xl flex items-center gap-3 ${uploadStatus.type === 'success'
                                ? 'bg-emerald-500/10 border border-emerald-500/20 text-emerald-400'
                                : 'bg-red-500/10 border border-red-500/20 text-red-400'
                                } `}
                        >
                            {uploadStatus.type === 'success' ? (
                                <Check className="w-5 h-5 flex-shrink-0" />
                            ) : (
                                <svg className="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                    <path fillRule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clipRule="evenodd" />
                                </svg>
                            )}
                            <span className="text-smfont-medium">{uploadStatus.message}</span>
                        </motion.div>
                    )}
                </div>
            )}
}
